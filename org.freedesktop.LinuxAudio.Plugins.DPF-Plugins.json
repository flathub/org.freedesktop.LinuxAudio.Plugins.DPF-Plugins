{
    "id": "org.freedesktop.LinuxAudio.Plugins.DPF-Plugins",
    "branch": "22.08",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "runtime-version": "stable",
    "sdk": "org.freedesktop.Sdk//22.08",
    "build-extension": true,
    "appstream-compose": false,
    "build-options": {
        "prefix": "/app/extensions/Plugins/DPF-Plugins"
    },
    "modules": [
        {
            "name": "dpf-plugins",
            "buildsystem": "simple",
            "build-commands": [
                "make -j${FLATPAK_BUILDER_N_JOBS}"
            ],
            "post-install": [
                "install -d ${FLATPAK_DEST}/ladspa",
                "cp -av bin/*-ladspa.so ${FLATPAK_DEST}/ladspa",
                "install -d ${FLATPAK_DEST}/dssi",
                "cp -av bin/*-dssi.so ${FLATPAK_DEST}/dssi",
                "install -d ${FLATPAK_DEST}/lv2",
                "cp -av bin/*.lv2 ${FLATPAK_DEST}/lv2",
                "install -d ${FLATPAK_DEST}/vst3",
                "cp -av bin/*.vst3 ${FLATPAK_DEST}/vst3",
                "install -d ${FLATPAK_DEST}/vst",
                "cp -av bin/*-vst.so ${FLATPAK_DEST}/vst",
                "install -d ${FLATPAK_DEST}/clap",
                "cp -av bin/*.clap ${FLATPAK_DEST}/clap",
                "install -Dm644 --target-directory=${FLATPAK_DEST}/share/metainfo org.freedesktop.LinuxAudio.Plugins.DPF-Plugins.metainfo.xml",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Plugins.DPF-Plugins --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Plugins.DPF-Plugins",
                "install -Dm644 -t $FLATPAK_DEST/share/licenses/dpf-plugins LICENSE"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/DISTRHO/DPF-Plugins/archive/v1.6.tar.gz",
                    "sha256": "175e3675a56a386918fab0b4b630632fb9506597fedf2ebde0691dbebc1cc2a7"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.DPF-Plugins.metainfo.xml"
                }
            ]
        }
    ]
}
